<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:likes) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= image_tag post.image.url(:thumb) %></td>
          <td><%= link_to post.content, post_path(post) %></td>
          <td><%=l post.created_at %></td>
          <td><%= post.likes.count %> likes</td>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_post_path(post), :class => 'btn btn-default btn-xs' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        post_path(post),
                        :method => :delete,
                        :class => 'btn btn-xs btn-danger' %>
            <%= link_to 'Comment', new_post_comment_path(post),
              :class => 'btn btn-default btn-xs' %>           
            <%= link_to 'Like', post_likes_path(post),
              :method => :post,
              :class => 'btn btn-primary btn-xs' %>
          </td>
        </tr>
        <tr><td colspan="6"><ul>
        <% if post.comments.any? %>
          <% post.comments.each do |comment| %>
            <li><%= comment.comment %></li>
          <% end %>
        <% else %>
          <li>No comments.</li>
        <% end %>
        </ul></td></tr>
      <% end %>
    <% else %>
      There are no posts yet
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Post', new_post_path, :class => 'btn btn-primary' %>
